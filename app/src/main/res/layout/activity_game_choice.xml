<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckedTextView
        android:id="@+id/et_game_choice3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="선택지3"
        android:onClick="onClick"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_game_choice2" />

    <CheckedTextView
        android:id="@+id/et_game_choice2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="선택지2"
        android:onClick="onClick"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_game_choice1" />

    <ImageView
        android:id="@+id/choice_image"
        android:layout_width="427dp"
        android:layout_height="350dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:mipmap/sym_def_app_icon" />

    <CheckedTextView
        android:id="@+id/et_game_choice1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="선택지1"
        android:onClick="onClick"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choice_image" />

</androidx.constraintlayout.widget.ConstraintLayout>