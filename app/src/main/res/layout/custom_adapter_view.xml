<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/boardID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/kopub_dotum_medium"
        android:text="익명"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/boardTitle"
        android:layout_width="222dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/kopub_dotum_bold"
        android:text="글 제목"
        app:layout_constraintStart_toEndOf="@+id/boardID"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/boardContent"
        android:layout_width="232dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/kopub_dotum_medium"
        android:text="글 내용"
        app:layout_constraintStart_toEndOf="@+id/boardID"
        app:layout_constraintTop_toBottomOf="@+id/boardTitle" />

    <TextView
        android:id="@+id/boardDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/kopub_dotum_medium"
        android:text="날짜"
        app:layout_constraintStart_toEndOf="@+id/boardTitle"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>